<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0ffff"
    tools:context=".ui.spicychiecrns.Spicy_chiecrns">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/view_margin_top"
        android:background="@drawable/botron_1"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_Spicy_Chiecrns_Title"
            android:layout_width="@dimen/textView_Spicy_Chiecrns_Title_width"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:padding="@dimen/textView_Spicy_Chiecrns_Title_padding"
            android:text="@string/spicy_chiecrns_screen_title"
            android:textAppearance="@style/Overlay.spicy_chiecrns_screen.Title"
            android:gravity="center_horizontal" />

        <GridView
            android:id="@+id/gridView_Spicy_Chiecrns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>